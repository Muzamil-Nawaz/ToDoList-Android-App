<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/Theme.MaterialComponents.Light"


    android:background="@drawable/background">
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="250dp"
        android:text="Check All Tasks"
        android:background="#fda400"
        android:onClick="checkAllTasks"
        ></Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="325dp"
        android:text="Add new task"
        android:background="#fda400"
        android:onClick="addTask"></Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="400dp"
        android:text="Update a task"
        android:background="#fda400"
        android:onClick="updateTask"></Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="475dp"
        android:text="Delete a task"
        android:onClick="deleteTask"
        android:background="#fda400"></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by Muzamil Nawaz"
        android:layout_x="40dp"
        android:layout_y="600dp"></TextView>


</AbsoluteLayout>